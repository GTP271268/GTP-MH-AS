<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/first_fragment_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="页面1:"
        android:textSize="50sp" />

    <Button
        android:id="@+id/first_fragment_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_fragment_textview"
        android:layout_centerHorizontal="true"
        android:text="文字"
        android:textSize="50sp" />

    <Button
        android:id="@+id/first_fragment_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_fragment_message"
        android:layout_centerHorizontal="true"
        android:text="图库"
        android:textSize="50sp" />

    <Button
        android:id="@+id/first_fragment_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_fragment_photo"
        android:layout_centerHorizontal="true"
        android:text="音/视频"
        android:textSize="50sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/first_fragment_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_fragment_video">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>